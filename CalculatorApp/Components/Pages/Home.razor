@page "/"

@inject CalculatorService CalculatorService;

<PageTitle>Calculator App</PageTitle>

<MudStack>
    <MudTextField Value="@CalculatorService.CurrentValue" ReadOnly="true" />
    <MudStack Row="true">
        <MudButton OnClick="@((args) => OnButtonClick("0"))">0</MudButton>
        <MudButton OnClick="@((args) => OnButtonClick("1"))">1</MudButton>
        <MudButton OnClick="@((args) => OnButtonClick("2"))">2</MudButton>
        <MudButton OnClick="@((args) => OnButtonClick("3"))">3</MudButton>
    </MudStack>
    <MudStack Row="true">
        <MudButton OnClick="@((args) => OnButtonClick("4"))">4</MudButton>
        <MudButton OnClick="@((args) => OnButtonClick("5"))">5</MudButton>
        <MudButton OnClick="@((args) => OnButtonClick("6"))">6</MudButton>
        <MudButton OnClick="@((args) => OnButtonClick("7"))">7</MudButton>
    </MudStack>
    <MudStack Row="true">
        <MudButton OnClick="@((args) => OnButtonClick("8"))">8</MudButton>
        <MudButton OnClick="@((args) => OnButtonClick("9"))">9</MudButton>
        <MudButton>+</MudButton>
        <MudButton>-</MudButton>
    </MudStack>
    <MudStack Row="true">
        <MudButton>*</MudButton>
        <MudButton>/</MudButton>
        <MudButton>=</MudButton>
        <MudButton>C</MudButton>
        <MudButton>AC</MudButton>
    </MudStack>
</MudStack>

@code {
    private void OnButtonClick(string value) => CalculatorService.AppendDigit(int.Parse(value));
}
